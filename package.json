{
	"name": "glm-ts",
	"version": "0.1.0",
	"description": "TypeScript matrix and vector maths library",
	"main": "./lib/index.js",
	"files": [
		"lib/**/*",
		"LICENSE.txt",
		"README.md"
	],
	"author": "Dief Bell",
	"license": "MIT",
	"scripts": {
		"prepare": "husky install",
		"build": "tsc -p tsconfig.build.json",
		"prewatch": "yarn build",
		"watch": "tsc -p tsconfig.build.json -w",
		"lint": "eslint ./src",
		"lint:fix": "eslint ./src --fix",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"coverage": "yarn test:coverage",
		"coverage:badges": "yarn test:coverage && jest-coverage-badges output ./badges",
		"coverage:open": "yarn coverage && open-cli converage/index.html",
		"prepack": "yarn test && yarn build",
		"check-circ": "dpdm --exit-code circular:1 ./src/index.ts"
	},
	"devDependencies": {
		"@types/jest": "^29.2.2",
		"@typescript-eslint/eslint-plugin": "^5.41.0",
		"@typescript-eslint/parser": "^5.41.0",
		"dpdm": "^3.10.0",
		"eslint": "^8.26.0",
		"husky": "^8.0.2",
		"jest": "^29.3.0",
		"jest-coverage-badges": "^1.1.2",
		"open-cli": "^7.1.0",
		"ts-jest": "^29.0.3",
		"typescript": "^4.8.4",
		"typescript-eslint": "^0.0.1-alpha.0"
	}
}
